<div class="main">
  <div class="inner">
    <div class="user__wrapper">
      <h2 class="page-heading">
        <%= "#{@user.name}さんの情報" %>
      </h2>
      <table class="table">
        <tbody>
          <tr>
            <th class="table__col1">名前</th>
            <td class="table__col2"><%= @user.name %></td>
          </tr>
          <tr>
            <th class="table__col1">プロフィール</th>
            <td class="table__col2"><%= @user.profile %></td>
          </tr>
          <tr>
            <th class="table__col1">所属</th>
            <td class="table__col2"><%= @user.occupation %></td>
          </tr>
          <tr>
            <th class="table__col1">役職</th>
            <td class="table__col2"><%= @user.position %></td>
          </tr>
        </tbody>
      </table>
      <h2 class="page-heading">
        <%= "#{@user.name}のプロトタイプ"%>
      </h2>
      <div class="user__card">
        <%# 部分テンプレートでそのユーザーが投稿したプロトタイプ投稿一覧を表示する %>
        <% @prototypes.each do |prototype| %>
          <% if user_signed_in? && prototype.id == @user.id %>
          <div class="prototype__image">
            <p><%=link_to (image_tag prototype.image),prototype_path(prototype.id), method: :get %><br><%= prototype.catch_copy %><br><%= prototype.concept %><br><%=link_to "by #{@user.name}" %></p> 
          </div>
          <% end%>
        <% end %>
      </div>
    </div>
  </div>
</div>